@model IEnumerable<DataMapping.Services.UserBirthdayDetails>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section MainHeader{
    @Html.Partial("PartialViews/PartialAdminHeader")
}

@section Container{
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 main_user">

        <!-- ****************** Start birthday list ****************** -->
        <div class="birthday">
            <div class="col-lg-10 col-lg-offset-1 col-xs-12 birthday_image text-center">
                <img src="~/Content/MoreHoliday/image/birthday.jpg" />
            </div>
        </div>
    </div>

@foreach (DataMapping.Services.UserBirthdayDetails item in Model)
{
    <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12  birthday_person text-center">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 hidden-xs hidden-sm text-left">
            @if (string.IsNullOrWhiteSpace(item.ProfilePictureUrl))
    {
            <img src="~/Content/MoreHoliday/image/user.jpg">
            }
                else
                {
                    <img src="@item.ProfilePictureUrl" />

                }
        </div>
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 text-center">
            <p> @item.UserName's Birthday is <span> @item.BirthDate.ToString("dd MMMM yyyy") </span></p>
        </div>
    </div>
}
    <!-- ****************** end birthday list ******************** -->
}
@section MainFooter{

    @Html.Partial("PartialViews/PartialAdminFooter")
}
@section styles{

}
@section  JavaScriptSection{
    <script type="text/javascript">

    </script>
}
