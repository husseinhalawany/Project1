@model DataMapping.Entities.VacationType


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section MainHeader{
    @Html.Partial("PartialViews/PartialAdminHeader")
}

@section Container{

<h4>@Html.ActionLink("Back To Employees List", "DeveloperIndex", "Users", new { }, null)</h4>

            @using (Html.BeginForm("Create", "VacationTypes", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">

                    <div class="meeting_details-wrap">
                        <div class="meeting_details-html">
                            <div class="meeting_details-form">
                                <div class="data-htm">
                                    <div class="group">
                                        <label for="disabledSelect">Vacation Name :</label>
                                        @Html.EditorFor(m => m.Name, new { @placeholder = "Your Placeholder Text" })
                                        @Html.ValidationMessageFor(m => m.Name)
                                        @*<input id="name" type="text" class="input" placeholder="Enter Vacation Name">*@
                                    </div>
                                    <div class="group">
                                        <label for="disabledSelect">Vacation Length :</label>
                                        @Html.EditorFor(m => m.VacationLength, new { @placeholder = "Your Placeholder Text" })
                                        @Html.ValidationMessageFor(m => m.VacationLength)
                                        @*<input type="number" class="input">*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="group">
                            <input type="submit" class="button btn-success" value="Create">
                        </div>
                    </div>
                </div>
                    @Html.ValidationSummary()
            }


    <!-- ************** end vacation modal ****************** -->

}

@section MainFooter{
    @Html.Partial("PartialViews/PartialAdminFooter")
}


