@model DataMapping.Entities.Sprint
@using (Html.BeginForm("Edit", "Sprints", FormMethod.Post, new { id = "Create" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit Sprint</h4>
    </div>
    <div class="modal-body">
        <div class="sprint-wrap">
            <div class="sprint-html">
                <div class="sprint-form">
                    <div class="data-htm">
                        <div class="group">
                            <label for="disabledSelect"> Sprint Name </label>
                            @Html.TextBoxFor(model => model.Name, new { id = "name", @class = "input", placeholder = "Enter Sprint Name" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="group text-center">
                <input type="button" value="Edit" class="button btn-success" id="Btn" />
            </div>
        </div>
    </div>

}
<link href="~/Content/MoreHoliday/dashstyle.css" rel="stylesheet" />
<script src="~/Scripts/Confirmdialog.js"></script>