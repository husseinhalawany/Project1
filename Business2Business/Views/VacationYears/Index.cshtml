@model IEnumerable<DataMapping.Entities.VacationYear>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section MainHeader{

    @Html.Partial("PartialViews/PartialAdminHeader")
}

@section Container{
    <br />
    <h1>  Vacation Years</h1>
    <br />
    <div class="row clearfix">
        <div class="col-md-12 col-sm-12 col-xs-12 column vacation_type">
            <h1>Manage vacation ocassions in @Model.FirstOrDefault().TitleName</h1>
            <table class="table table-bordered table-hover" id="annotations">
                <thead>
                    <tr>
                        <th class="text-center col-md-2">
                            <h4> Name</h4>
                        </th>
                        <th class="text-center col-md-2">
                            <h4> Start Date</h4>
                        </th>
                        <th class="text-center col-md-2">
                            <h4> End Date</h4>
                        </th>
                        <th class="text-center col-md-2">
                            <h4></h4>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vacationYear in Model)
                    {

                        <tr id='annotations_template' title='annotation'>

                            <td class="vac text-center">
                                @vacationYear.YearName
                            </td>
                            <td class="vac text-center">
                                @vacationYear.StartDate.ToString("dd MMM yyyy")
                            </td>
                            <td class="vac text-center ">
                                @vacationYear.EndDate.ToString("dd MMM yyyy")
                            </td>
                            <td class="vac text-center">
                                @using (Html.BeginForm("Delete", "VacationYears", new { id = vacationYear.Id }, FormMethod.Post, new { @id = vacationYear.YearName }))
                                {
                                    @Html.ActionLink("Occasion Vacations", "Index", "OccasionVacations",vacationYear, new { @class = "btn btn-success fa ", vacationYear = vacationYear })
                                    <span>&nbsp;</span>
                                    
                                    <button type='submit' name="annotation_delete" class='btn btn-danger fa fa-trash'></button>
                                }

                            </td>

                        </tr>


                    }
                </tbody>
            </table>
        </div>

    </div>



    <br />

}

@section MainFooter{

    @Html.Partial("PartialViews/PartialAdminFooter")
}
@section JavaScriptSection{
    
}