@model DataMapping.Services.StandUpMeetingDetails
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section MainHeader{
    @Html.Partial("PartialViews/PartialAdminHeader")
}

@section Container{
     
    <h1 class="hidden-xs hidden-sm"> Create Stand Up Meeting </h1>
    <br/>

    @using (Html.BeginForm("Create", "StandUpMeet", FormMethod.Post, new { id = "Create" }))
    {
        <h3> Yestarday Job</h3>
        <div>

            <br/>
            @if (Model.YesterdayJob != null)
            {
                <textarea id="DetailsYesterdayJob" cols="40" rows="12" maxlength="1000">@Html.Raw(HttpUtility.HtmlDecode(Model.YesterdayJob))</textarea>
            }
            else
            {
                <textarea id="DetailsYesterdayJob" cols="40" rows="12" maxlength="1000"></textarea>
            }

            @Html.HiddenFor(model => model.YesterdayJob, new { @id = "YesterdayJob" })
            @Html.ValidationMessageFor(model => model.YesterdayJob)
            <br/>
            <h3> Today Job</h3>
            <br/>
            @if (Model.TodayJob != null)
            {
                <textarea id="DetailsTodayJob" cols="40" rows="12" maxlength="1000">@Html.Raw(HttpUtility.HtmlDecode(Model.TodayJob))</textarea>
            }
            else
            {
                <textarea id="DetailsTodayJob" cols="40" rows="12" maxlength="1000"></textarea>
            }
            @Html.HiddenFor(model => model.TodayJob, new { @id = "TodayJob" })
            @Html.ValidationMessageFor(model => model.TodayJob)
            <br/>
            <h3> Problems</h3>
            <br/>
            @if (Model.YesterdayObstruction != null)
            {
                <textarea id="DetailsYesterdayObstruction" cols="40" rows="12" maxlength="1000">@Html.Raw(HttpUtility.HtmlDecode(Model.YesterdayObstruction))</textarea>
            }
            else
            {
                <textarea id="DetailsYesterdayObstruction" cols="40" rows="12" maxlength="1000"></textarea>
            }
            @Html.HiddenFor(model => model.YesterdayObstruction, new { @id = "YesterdayObstruction" })
            @Html.ValidationMessageFor(model => model.YesterdayObstruction)
            <br/>
            <h3> Reading</h3>
            <br/>
            @if (Model.Reading != null)
            {
                <textarea id="DetailsReading" cols="40" rows="12" maxlength="1000">@Html.Raw(HttpUtility.HtmlDecode(Model.Reading))</textarea>
            }
            else
            {
                <textarea id="DetailsReading" cols="40" rows="12" maxlength="1000"></textarea>
            }
            @Html.HiddenFor(model => model.Reading, new { @id = "Reading" })
            @Html.ValidationMessageFor(model => model.Reading)
            <br/>
            <h3> Suggstion</h3>
            <br/>
            <textarea id="DetailsSuggestion" cols="40" rows="12" maxlength="1000"></textarea>
            @Html.HiddenFor(model => model.Suggestion, new { @id = "Suggestion" })
            @Html.ValidationMessageFor(model => model.Suggestion)
            <br />
            <br />
            <input type="submit" value="Send" id="Btn" class="btn btn-success" />

            <div class="standup_send" rows="12" cols="40">
            </div>
            <h4>@Html.ActionLink("Back To Employees List", "DeveloperIndex", "Users", new { }, null)</h4>
        </div>
    }

}
@section MainFooter{

    @Html.Partial("PartialViews/PartialAdminFooter")
}
@section styles{


}
@section  JavaScriptSection{
    <script src="~/Scripts/jquery-1.3.2.js"></script>
    <script src="~/Scripts/jquery-ui-1.7.2.custom.min.js"></script>

    <link href="~/Content/jHtmlArea/jqueryui/ui-lightness/jquery-ui-1.7.2.custom.css" rel="stylesheet" />
    <script src="~/Scripts/jHtmlArea-0.8.js"></script>
    <link href="~/Content/jHtmlArea/jHtmlArea.css" rel="stylesheet" />
    <script>
        $("#DetailsYesterdayJob").htmlarea(); // Initialize jHtmlArea's with all default values
        $("#DetailsTodayJob").htmlarea(); // Initialize jHtmlArea's with all default values
        $("#DetailsYesterdayObstruction").htmlarea(); // Initialize jHtmlArea's with all default values
        $("#DetailsReading").htmlarea(); // Initialize jHtmlArea's with all default values
        $("#DetailsSuggestion").htmlarea(); // Initialize jHtmlArea's with all default values
        $(function () {
            $('#Btn').bind('click', function () {

                $("#YesterdayJob").val($("#DetailsYesterdayJob").val().replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;'));
                $("#TodayJob").val($("#DetailsTodayJob").val().replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;'));
                $("#YesterdayObstruction").val($("#DetailsYesterdayObstruction").val().replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;'));
                $("#Reading").val($("#DetailsReading").val().replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;'));
                $("#Suggestion").val($("#DetailsSuggestion").val().replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;'));

            });
        });
    </script>
    <style type="text/css">
        /* body { background: #ccc;} */
        div.jHtmlArea .ToolBar ul li a.custom_disk_button {
            /*background: url(images/disk.png) no-repeat;*/
            background-position: 0 0;
        }
    </style>


}
