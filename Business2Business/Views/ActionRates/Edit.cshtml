@model DataMapping.Entities.ActionRate

@using (Html.BeginForm("Edit", "ActionRates", FormMethod.Post, new { id = "Edit" }))
{        
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="modal-content">


        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title text-left" id="myModalLabel">Edit Action</h4>
        </div>
        <div class="modal-body">
            <div class="meeting_details-wrap">
                <div class="meeting_details-html">
                    <div class="meeting_details-form">
                        <div class="data-htm">
                            <div class="group">
                                <label for="disabledSelect">Action Name :</label>
                                <input class="input" id="name" name="Name" placeholder="Enter Action Name" required="required" type="text" value="@Model.Name">


                            </div>

                            <div class="group">
                                <label for="disabledSelect">Max Rate :</label>
                                <input class="input" data-val="true" data-val-number="The field MaxRate must be a number." data-val-required="The MaxRate field is required." id="MaxRate" name="MaxRate" placeholder="Enter Max Rate" type="number" required value="@Model.MaxRate" min="1">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer text-center">

            <input type="submit" class="btn btn-primary" id="" value="Save" />

        </div>
    </div>
    @Html.ValidationSummary()


}