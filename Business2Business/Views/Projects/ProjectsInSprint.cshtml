@model IEnumerable<DataMapping.Entities.Project>

    @{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    }
    @section MainHeader{

    @Html.Partial("PartialViews/PartialAdminHeader")
    }
    @section Container{
    <div id="SprintList"> </div>

<div class="col-lg-10 col-lg-offset-2 col-md-9 col-md-offset-3 col-sm-8 col-sm-offset-4 col-xs-12">
    <button type="button" class="navbar-toggle story_toggle collapsed text-right" data-toggle="collapse" data-target="#sidebar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
 
        
        <div class="col-lg-12 col-md-12 column story_table" id="StoriesList">
            <table class="table-bordered table table-hover">
                <thead>
                    <tr>

                        <th class="col-md-3">Name</th>
                        <th class="col-md-3">Item Count</th>
                        <th class="col-md-3">Manage</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name </td>
                            <td>@item.NumberOfStories </td>
                            <td>@Html.ActionLink("Manage stories", "StorySprint","Stories", new { projectId = item.Id, sprintId=item.SprintId }, new { @class = "btn btn-success" }) </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    
</div>

    }
    @section MainFooter{

    @Html.Partial("PartialViews/PartialAdminFooter")
    }
    @section  JavaScriptSection{

    <script>
        var _inCallback = false;

        jQuery(document).ready(loadSprints(0));
        
    </script>


    }
