@model DataMapping.Entities.Project

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section MainHeader{
    @Html.Partial("PartialViews/PartialAdminHeader")

}

@section Container{

    @using (Html.BeginForm("Edit", "Projects", FormMethod.Post, new { id = "Edit" }))
    {

        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <div class="modal-content">


            <div class="modal-header">
                <button type="button" class="close" onclick="ReloadPage()" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-left" id="myModalLabel">Edit @Model.Name Project</h4>
            </div>
            <div class="modal-body">
                <div class="meeting_details-wrap">
                    <div class="meeting_details-html">
                        <div class="meeting_details-form">
                            <div class="data-htm">
                                <div class="group">
                                    <label for="disabledSelect">Project Name</label>

                                    @Html.TextBoxFor(model => model.Name, new { @id = "name", type = "text", @class = "input", @placeholder = "Enter Project Name" })
                                    @Html.ValidationMessageFor(model => model.Name)

                                </div>

                                <div class="group">
                                    <label for="disabledSelect">Description</label>
                                    @Html.TextAreaFor(model => model.Descreption, new { @class = "form-control", @rows = "3", @placeholder = "Enter Details" })
                                    @Html.ValidationMessageFor(model => model.Descreption)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="group">
                <input type="submit" class="button btn-success" value="Edit">
            </div>
        </div>


        @Html.ValidationSummary(false)


    }
}

@section MainFooter{

    @Html.Partial("PartialViews/PartialAdminFooter")
}


@section JavaScriptSection{
<script src="~/Scripts/EditConfirmDialog.js"></script>
<script>

    function ReloadPage() {
        window.location.href = "/Home/Index";
    }
</script>
    }
