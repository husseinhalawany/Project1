@using DataMapping.Services
@model IEnumerable<DataMapping.Services.EmployeePointDetails>
@{
    EmployeePointDetails bestOfTheMonth = Model.FirstOrDefault();
    EmployeePointDetails bestOfTheQuarter = Model.Skip(1).FirstOrDefault();
}

<div class="admincard col-lg-3 col-md-3 col-xs-10 col-sm-10 placeholder">

    <div class="adminpic text-center">

        @if (string.IsNullOrWhiteSpace(bestOfTheMonth.ProfilePicURL))
        {
            <img src="~/Content/MoreHoliday/image/user.jpg">
        }
        else
        {
            <img src="@bestOfTheMonth.ProfilePicURL"/>
        }


    </div>

    <div class="admininfo">
        <label>
            <i class="fa fa-user" aria-hidden="true"></i>
            <span>@Html.DisplayFor(modelItem => bestOfTheMonth.UserName)</span>
        </label>
        <br/>
        <label>
            <i class="fa fa-random" aria-hidden="true"></i>
            <span>@Html.DisplayFor(modelItem => bestOfTheMonth.TotalPoints)</span>
        </label><br/>
        <label>
            <i class="fa fa-mobile" aria-hidden="true"></i>
            <span>
                @Html.DisplayFor(modelItem => bestOfTheMonth.MonthName)
            </span>
        </label><br/>
    </div>

    <hr>

</div>
<div class="admincard col-lg-3 col-md-3 col-xs-10 col-sm-10 placeholder">

    <div class="adminpic text-center">

        @if (string.IsNullOrWhiteSpace(bestOfTheQuarter.ProfilePicURL))
        {
            <img src="~/Content/MoreHoliday/image/user.jpg">
        }
        else
        {
            <img src="@bestOfTheQuarter.ProfilePicURL" />
        }


    </div>

    <div class="admininfo">
        <label>
            <i class="fa fa-user" aria-hidden="true"></i>
            <span>@Html.DisplayFor(modelItem => bestOfTheQuarter.UserName)</span>
        </label>
        <br />
        <label>
            <i class="fa fa-random" aria-hidden="true"></i>
            <span>@Html.DisplayFor(modelItem => bestOfTheQuarter.TotalPoints)</span>
        </label><br />
        <label>
            <i class="fa fa-mobile" aria-hidden="true"></i>
            <span>
                @Html.DisplayFor(modelItem => bestOfTheQuarter.QuarterName)
            </span>
        </label><br />
    </div>

    <hr>

</div>



